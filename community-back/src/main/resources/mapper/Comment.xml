<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.korit.communityback.domain.comment.CommentMapper">

    <!-- 댓글 목록 조회 -->
    <select id="findByTweetId" parameterType="int" resultType="com.korit.communityback.dto.comment.CommentDto">
        SELECT
        c.comment_id AS commentId,
        c.text,
        u.username AS username,
        c.created_at AS createdAt
        FROM comment_tb c
        JOIN user_tb u ON c.user_id = u.user_id
        WHERE c.tweet_id = #{tweetId}
        ORDER BY c.created_at ASC
    </select>

    <!-- 댓글 등록 -->
    <insert id="insertComment" parameterType="com.korit.communityback.domain.comment.Comment" useGeneratedKeys="true" keyProperty="commentId">
        INSERT INTO comment_tb (tweet_id, user_id, text, created_at)
        VALUES (#{tweetId}, #{userId}, #{text}, #{createdAt})
    </insert>

    <!-- 댓글 단일 조회 -->
    <select id="findById" parameterType="int" resultType="com.korit.communityback.domain.comment.Comment">
        SELECT * FROM comment_tb WHERE comment_id = #{commentId}
    </select>

    <!-- 댓글 삭제 -->
    <delete id="deleteComment" parameterType="int">
        DELETE FROM comment_tb WHERE comment_id = #{commentId}
    </delete>

</mapper>